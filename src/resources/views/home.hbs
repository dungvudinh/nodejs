<div class="container mt-3">
  <ul class="row list-item">
    {{#each courses}}
      <li  class=" item col-xs-12 col-sm-6 col-md-4 col-lg-3 col-xl-3">
        <div class="item-container">
          <div class="item-image">
            <img src="http://localhost:3001/uploads/{{this.image_url}}" width="200"/>
          </div>
          <div class="item-content mt-3">
            <p>{{this.title}}</p>
            <p>{{this.desc}}</p>
          </div>
         <div class="item-action mt-2">
          <a href="" class="text-decoration-none">
            <button  type="button" class="btn btn-primary">Edit</button>
          </a>
          <a href="" class="text-decoration-none">
            <button type="button" class="btn btn-secondary">Delete</button>
          </a>
          <a href='/courses/{{this.slug}}' class="text-decoration-none">
            <button type="button" class="btn btn-success">Detail</button></a>
         </div>
        </div>
      </li>
    {{/each}}
  </ul>
  <nav aria-label="Page navigation example text-align-center">
  {{renderPage count currentPage}}
</nav>
</div>